<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_border"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >


    <TextView
        android:id="@+id/item_book_index_tv"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:text="21"
        android:textColor="#d4237a"
        android:textSize="16sp"
        android:layout_marginRight="4dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/item_book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="121212"
        android:textColor="#2c2c2c"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/item_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i am book name"
        android:textColor="#000000"
        android:textSize="24sp"
        android:paddingTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_book_index_tv"
        android:layout_toLeftOf="@id/item_book_type"
        />
    <TextView
        android:id="@+id/item_book_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="121212"
        android:textColor="#8a8a8a"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_book_index_tv"
        android:layout_below="@id/item_book_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        />


</RelativeLayout>
</LinearLayout>