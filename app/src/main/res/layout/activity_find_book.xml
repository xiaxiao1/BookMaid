<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/app_title"
    >
    <RelativeLayout
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg"
        >
        <ImageView
            android:id="@+id/sousuo_back_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/title_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查找"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/usercenter_setting_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/title_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/search_rl"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_below="@id/app_title"
    android:layout_marginTop="4dp"
    >
    <TextView
        android:id="@+id/search_img"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="搜索"
        android:textColor="@color/hong"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />
    <EditText
        android:id="@+id/edit_et"
        android:hint="输入书名..."
        android:textSize="12sp"
        android:textColorHint="@color/gray"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="6dp"
        android:layout_marginRight="4dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/search_img"
        android:layout_marginLeft="10dp"
        />
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:background="@color/thin_line"
        />
</RelativeLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_rl"
        />
    <LinearLayout
        android:id="@+id/no_data_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有找到相关书籍"
            android:textColor="@color/gray_light"
            android:padding="2dp"
            />
        <TextView
            android:id="@+id/no_data_go_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去添加"
            android:textColor="@color/hong"
            android:padding="2dp"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:background="@drawable/border"
            />
    </LinearLayout>
</RelativeLayout>