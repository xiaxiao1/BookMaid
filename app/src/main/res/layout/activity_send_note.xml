<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg"
        >
        <ImageView
            android:id="@+id/sendnote_back_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_black"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/usercenter_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丢纸条"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/usercenter_setting_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/title_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/sendnote_towho_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_light_gray_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="     回复   "
            android:textColor="@color/hong"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sendnote_towho_head_cimg"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:src="@drawable/app_head_gray"
            />
        <TextView
            android:id="@+id/sendnote_towho_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="huifushui"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/sendnote_addnote_et"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:hint="此刻的想法\n推荐写写书中的句子。。。"

        android:textColorHint="@color/thin_line"
        android:maxLines="4"
        android:maxLength="150"
        android:gravity="top"
        android:padding="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/border_gray"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:id="@+id/send_note_send_ll"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:background="@drawable/border"
            android:layout_marginRight="16dp"
            >
            <TextView
                android:id="@+id/bookinfo_add_note_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textStyle="bold"
                android:textColor="@color/hong"
                android:textSize="13sp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/bookinfo_add_note_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/zhifeiji"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>