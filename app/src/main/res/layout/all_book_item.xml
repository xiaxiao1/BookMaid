<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        >

        <ImageView
            android:id="@+id/item_book_bg_img"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/book_img"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/item_book_index_tv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="21"
            android:textColor="#d4237a"
            android:textSize="10sp"
            android:background="@drawable/border_gray"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/item_book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="121212"
            android:textColor="#2c2c2c"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_book_doit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:textColor="#2c2c2c"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/item_book_type"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_book_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="121"
            android:textColor="#2c2c2c"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/item_book_doit"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i am book name"
            android:textSize="18sp"
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_book_bg_img"
            android:layout_toLeftOf="@id/item_book_read"
            />
        <TextView
            android:id="@+id/item_book_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="121212"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_book_bg_img"
            android:layout_below="@id/item_book_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/item_book_introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_book_bg_img"
            android:layout_below="@id/item_book_id"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        />
</LinearLayout>