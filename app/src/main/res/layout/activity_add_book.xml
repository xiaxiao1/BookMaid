<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:gravity="center_horizontal"
    >
    <RelativeLayout
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg"
        >
        <ImageView
            android:id="@+id/add_book_back_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_black"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/add_book_back_img"
            android:layout_centerVertical="true"
            android:text="添加书书"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            />
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/listview_bg"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_light_gray_bg_small_radius"
        android:padding="4dp"
        >
        <ImageView
            android:id="@+id/add_book_cover_img"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/book"
            android:layout_alignParentLeft="true"
            />

        <TextView android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_book_cover_img"
            android:gravity="center_horizontal"
            android:text="封    面"
            android:textSize="10sp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/add_book_cover_img"
            android:layout_marginLeft="8dp"
            >
            <EditText
                android:id="@+id/add_book_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="书名"
                android:textColor="@color/gray"
                android:textSize="19sp"
                android:paddingTop="2dp"
                android:maxLength="30"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/add_book_writer_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="作者"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:maxLength="15"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/add_book_introduce_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="简介......."
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:maxLines="3"
                android:maxLength="150"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="敲黑板！认真书写哦"
        android:textSize="10sp"
        android:gravity="right"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_bg"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <RelativeLayout
        android:id="@+id/add_book_buy_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >


        <ImageView
            android:id="@+id/mai_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/mai"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="买了吗"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_toRightOf="@id/mai_img"
            android:layout_marginLeft="8dp"

            />
        <TextView
            android:id="@+id/add_book_buy_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未买"
            android:textColor="#ffffff"
            android:background="@drawable/border_hong_soild"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"

            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/read_menu"
            android:layout_toLeftOf="@id/add_book_buy_label_tv"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_bg"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <RelativeLayout
        android:id="@+id/add_book_read_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:id="@+id/du_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/read"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="读了吗"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_toRightOf="@id/du_img"
            android:layout_marginLeft="8dp"

            />
        <TextView
            android:id="@+id/add_book_read_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未读"
            android:textColor="#ffffff"
            android:background="@drawable/border_lan_soild"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"

            />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/read_menu"
            android:layout_toLeftOf="@id/add_book_read_label_tv"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/listview_bg"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/add_book_add_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="确定"
        android:textColor="#ffffff"
        android:background="@drawable/circle_bg_soild_test"
        android:layout_marginTop="40dp"

        />
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您添加的书同时也会经审核推荐给小书仆的其他人"
        android:textSize="10sp"
        android:textColor="@color/gray_light"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        />
    <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/readbook"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        />
</LinearLayout>