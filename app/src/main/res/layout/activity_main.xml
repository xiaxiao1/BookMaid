<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaxiao.bookmaid.MainActivity"
    android:focusableInTouchMode="true"
    >
<!--title-->
    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"

        >
        <ImageView
            android:id="@+id/add_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/search_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/add_img"
            android:layout_marginRight="6dp"
            />
        <EditText
            android:id="@+id/edit_et"
            android:hint="输入书名..."
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:paddingLeft="6dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_height="40dp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/search_img"
            android:layout_marginLeft="10dp"
            />
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:background="@color/blue_dark"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/have_btn"
            android:text="已有的"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            />
        <View android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/buy_btn"
            android:text="待买的"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_dark"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_rl"
        android:layout_above="@id/bottom_ll"
        android:paddingTop="6dp"
        android:background="@color/listview_bg"
        android:divider="@color/listview_bg"
        android:dividerHeight="4dp"
        />

</RelativeLayout>








































































