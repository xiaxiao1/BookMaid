<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:id="@+id/booknote_item_fromwho_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/booknote_item_fromwho_head_cmig"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/app_head_gray"
            />
        <TextView
            android:id="@+id/booknote_item_fromwho_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="huifuzhe"
            android:textColor="@color/gray_light"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/booknote_item_towho_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:layout_marginLeft="4dp"
        android:background="@drawable/view_light_gray_bg"
        >
        <TextView
            android:id="@+id/book_item_tuijian_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   回复   "
            android:textColor="@color/hong"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/booknote_item_towho_head_cimg"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="2dp"
            android:src="@drawable/app_head_gray"
            />
        <TextView
            android:id="@+id/booknote_item_towho_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="huifushui"
            android:textColor="@color/gray_light"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            />

    </LinearLayout>

</LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/booknote_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="huifushui"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:maxLength="200"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_weight="2"
            />
        <ImageView
            android:id="@+id/booknote_item_rightimg"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/zhifeiji"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="invisible"
            />
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="50dp"
        >
        <TextView
            android:id="@+id/booknote_item_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="huifushui"
            android:textColor="@color/gray_light"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            />
        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/zhifeiji_gray"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
    <TextView android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="小书仆: 么么哒 求抱抱"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:background="@drawable/view_ract_light_gray_bg"
        android:visibility="invisible"
        />
    <include
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        layout="@layout/view_split_line"
        android:background="@color/gray"
        />
</LinearLayout>