<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaxiao.bookmaid.activity.UserActivity"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/title_bg"
        >
        <ImageView
            android:id="@+id/usercenter_back_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/usercenter_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读书的小屁孩"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/usercenter_setting_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/title_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_head"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:src="@drawable/app_head_gray"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/hong"
        android:scaleType="centerCrop"
        android:layout_below="@id/app_title"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/usercenter_tongji_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff0000"
        android:layout_below="@id/user_head"
        android:orientation="horizontal"
        android:visibility="gone"
        ></LinearLayout>
    <LinearLayout
        android:id="@+id/setting_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/usercenter_tongji_ll"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/wide_line"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/usercenter_gerenziliao_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/dialog_bg"
            android:visibility="gone"
            >
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/down_arrow"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:visibility="gone"

                />
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/wide_line"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="32dp"
            />
        <LinearLayout
            android:id="@+id/usercenter_shujia_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/dialog_bg"
            >
            <ImageView android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/shujia"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的书架"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/down_arrow"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:visibility="gone"

                />
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/wide_line"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:id="@+id/usercenter_zhitiao_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/dialog_bg"
            >
            <ImageView android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/zhifeiji"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的纸条"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/down_arrow"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:visibility="gone"
                />
        </LinearLayout>


        <!---->
        <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
            layout="@layout/view_split_line"
            />
        <LinearLayout
            android:id="@+id/usercenter_fankui_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/dialog_bg"
            >
            <ImageView android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/gouda"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="勾搭"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                />
            <ImageView android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/down_arrow"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:visibility="gone"
                />
        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/wide_line"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />


    </LinearLayout>
    <Button
        android:id="@+id/exit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出当前账号"
        android:textColor="@color/hong"
        android:background="@drawable/border"
        android:layout_marginTop="60dp"
        android:layout_below="@id/setting_ll"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/exit_btn"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tuijian_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/test_black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tuijian_ren_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读书的小屁孩"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/test_black"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tuijian_tv"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/tuijian_wenhao_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:src="@drawable/wenhao"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tuijian_ren_tv"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="-8dp"
            />
        <LinearLayout
            android:id="@+id/zuozhe_area_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_above="@id/tuijian_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            >
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/zuozhe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高尔基"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/test_black"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/mingyan_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/zuozhe_area_ll"
            android:text="书是人类进步的阶梯  "
            />
    </RelativeLayout>
</RelativeLayout>
